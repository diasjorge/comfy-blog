<div class='post'>
  <h1><%= @post ? @post.title : link_to(post.title, blog_post_path(post))%></h1>
  <div class='author'><%= post.author %></div>
  <div class='date'><%= post.published_at %></div>
  <div class='content'>
    <%= @post ? post.content.html_safe : post.excerpt.html_safe %>
  </div>
</div>
